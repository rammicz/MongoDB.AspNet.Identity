<h2>Your User Information</h2>
<div style="background: #f8f9fa; padding: 1.5rem; border-radius: 4px; margin: 1rem 0;">
    <p><strong>Username:</strong> @User.Identity?.Name</p>
    <p><strong>Authenticated:</strong> @User.Identity?.IsAuthenticated</p>
    <p><strong>Authentication Type:</strong> @User.Identity?.AuthenticationType</p>
    
    @if (User.Claims.Any())
    {
        <h3 style="margin-top: 1.5rem;">Claims:</h3>
        <ul>
            @foreach (var claim in User.Claims)
            {
                <li><strong>@claim.Type:</strong> @claim.Value</li>
            }
        </ul>
    }
</div>

